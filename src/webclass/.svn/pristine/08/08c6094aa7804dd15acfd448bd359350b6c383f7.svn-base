@CHARSET "UTF-8";
html,body{
	width: 100%; 
	height: 100%;
	margin: 0 auto;
    background-color: #EDEDED;
	overflow: auto;
    font-size: 14px;
    font-family: 微软雅黑!important;
    text-align: center;
}

.web-rc-div {
	width: 1400px;
	height: 800px;
	margin: 30px auto;
	padding: 10px 0;
	background-color: #EDEDED;
}

.web-rc-left {
	width: 790px;
	height: 100%;
	float: left;
	background-color: white;
    border-radius: 3px;
	border: 1px solid #fff;
}

.web-rc-right {
	width: 600px;
	height: 100%;
	background-color: #EDEDED;
	margin-left: 10px;
	float: right;
}

