@CHARSET "UTF-8";
html,body {
	width: 100%;
	height: 100%;
	margin: 0 auto;
	text-align: center;
	overflow: auto;
    font-size: 14px;
    font-family: 微软雅黑!important;
}
.web-class {
	width: 1064px;
	height: 744px;
	margin: 50px auto;
	text-align: center;
	/* background-color: darkgray; */
	position: relative;
}
.content {
	width: 1054px;
	height: 732px;
	margin: 5px;
	padding: 4px;
	background-color: #f7f7f7;
	position: absolute;
}
.left {
	width: 1044px;
	height: 772px;
	float: left;
	/* border: 1px solid purple; */
}
.whiteboard {
	width: 100%;
	height: 680px;
	border-top: 1px solid #c9e7fc;
	border-left: 1px solid #c9e7fc;
	border-right: 1px solid #c9e7fc;
	background-color: #ffffff;
	border-radius: 5px 5px 0 0 ;
}
.teaching-file-tab li {
    border-left: 1px solid #c9e7fc;
}
.teaching-file-tab li a {
    padding: 9px 10px !important;
}
.page-left {
	width: 40px;
	height: 40px;
	float: left;
	margin: 320px 5px;
}
.page-right {
	width: 40px;
	height: 40px;
	float: right;
	margin: 320px 5px;
}
.page-refresh {
	display: block;
	width: 50px;
	height: 25px;
	text-align: center;
	font-size: 16px;
	border-radius: 3px;
	background: -webkit-linear-gradient(top, rgba(0,198,255,0.8), rgba(0,114,255,0.5)); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(top, rgba(0,198,255,0.8), rgba(0,114,255,0.5)); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(top, rgba(0,198,255,0.8), rgba(0,114,255,0.5)); /* Firefox 3.6 - 15 */
    background: linear-gradient(to bottom, rgba(0,198,255,0.8), rgba(0,114,255,0.5));
	color: #ffffff;	
	float: right;
	margin-top: -316px;
}
.page-refresh:hover {
	cursor: pointer;
	background: -webkit-linear-gradient(top, rgba(74,155,255,0.6), rgba(0,144,255,1)); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(top, rgba(74,155,255,0.6), rgba(0,144,255,1)); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(top, rgba(74,155,255,0.6), rgba(0,144,255,1)); /* Firefox 3.6 - 15 */
    background: linear-gradient(to bottom, rgba(74,155,255,0.6), rgba(0,144,255,1)); /* default */
}
.page-count {
	width: 40px;
	height: 20px;
	float: right;
	margin-top: -40px;
	margin-right: -40px;
	font-size: 18px;
	color: #0072ff;
}
.page-pre,.page-next:hover {
	cursor: pointer;
} 
.teaching-file-content {
    width: 960px;
    height: 600px;
    margin: 20px 42px;
    position: relative;
	/* background-color: white; */
	background-repeat: no-repeat;
	background-position: center;
}
canvas {
	position: absolute;
	left: 0;
	top: 0;
}
#cvs-text {
	display: none;
	min-width: 100px;
	min-height: 30px;
	width: auto;
	height: auto;
	position: absolute;
	left: 0;
	top: 0;
	border: 1px solid #000000;
    text-align: left;
    overflow-x: hidden;
    font-size: 16px;
    line-height: 25px;
}
.bottom {
	width: 100%;
	height: 44px;
	border: 1px solid #c9e7fc;
	background-color: #ffffff;
	border-radius: 0 0 5px 5px;
	/* pointer-events: none; */
}

.tools-menu {
	width: 60px;
	height: 40px;
	background-color: white;
	text-align: center;
	margin: 1px 20px;
	float: left;
}
.tools-menu:hover{
	background-color: #ecf1f8;
	cursor: pointer;
	border-radius: 5px; 
}
.tools-menu ul {
	min-width: 120px;
	margin-left: -30px; 
	border: 1px solid #c2d2e2;
	border-radius: 3px;
}
.tools-menu ul li {
	padding: 0 10px;
	text-align: center;
	height: 40px; 
}
.tools-menu ul li img{
	margin: 14px 0;
	float: left;
}
.tools-menu ul li span{
	margin: 9px 25px;
	font-size: 16px;
	float: left;
}
.tools-menu ul li:hover {
	background-color: #0072ff;
	color: #ffffff;
	cursor: pointer;
}
#lock-whiteboard:hover {
	cursor: not-allowed;
}