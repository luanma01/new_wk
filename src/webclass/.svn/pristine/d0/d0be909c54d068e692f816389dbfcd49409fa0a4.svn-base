/* bootstrap class in different place */


/* dropdown-menu */
.dropdown-menu
{
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 1000;
    display: none;
    float: left;
    min-width: 0.1rem;
    padding: 0.05rem 0;
    margin: 0.02rem 0 0;
    font-size: 0.14rem;
    text-align: left;
    list-style: none;
    background-color: #fff;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 0.01rem solid #ccc;
    border: 0.01rem solid rgba(0,0,0,.15);
    border-radius: 0.04rem;
    -webkit-box-shadow: 0 0.06rem 0.12rem rgba(0,0,0,.175);
    box-shadow: 0 0.06rem 0.12rem rgba(0,0,0,.175);
}

.toolbar .dropdown-menu
{
    top: 0;
    left: auto;
    right:0.1rem;
    float: left;
    width:1.6rem;
    padding: 0.05rem 0;
    margin: 0 0.36rem;
    font-size: 0.16rem;
    border-radius: 0.05rem;
    cursor:context-menu;
}

.chat-do .dropdown-menu
{
    padding: 0.05rem;
}

.file-area .dropdown-menu
{
    width: 100%;
}

/* btn */
.webclass .btn {
    display: inline-block;
    padding: 0.06rem 0.12rem;
    margin-bottom: 0;
    font-size: 0.14rem;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 0.01rem solid transparent;
    border-radius: 0.06rem;
}

.teach-area-top .btn, .teach-area-bottom .btn
{
    color:#0072ff;
    opacity:0.8;
}
.teach-area a.btn
{
    border-radius: 50%;
    padding: 0;
}
.teach-area .btn:focus{
    outline:none;
}
.btn-wrap{
    margin-right: 0.1rem;
    position: relative;
}
